/*
 * $Id: Imakefile,v 1.5 1994-05-23 23:58:37 granger Exp $
 *
 * Basically just install config.h into the include directory,
 * and make sure the necessary files are distributed.
 * Note how the scripts subdirectory is included in the distribution
 * without actually performing a 'make distfiles' in ./scripts
 */

#define IHaveSubdirs
#define PassCDebugFlags

SUBDIRS = scripts

all::

HEADERS = Xosdefs.h version.h config.h

DISTFILES = Imakefile $(HEADERS) Project.tmpl README README.imake \
	    Zeb-Imake.doc appendix.doc Zeb.rules config.h.dist

DISTSUBDIRS = scripts

BuildIncludes($(HEADERS),.,.)

depend::

install::

lint::

Makefiles::

DistfilesTarget($(DISTFILES))
DistfilesSubdirs($(DISTSUBDIRS))

