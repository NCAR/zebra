XCOMM --- Deciding C compiler and options

/*
 * Decide whether to automatically turn on static linking based on
 * existence of AutoBinary.
 */
#ifdef AutoBinary
# if !defined(SunArchitecture) && !defined(AutoStatic)
#  define AutoStatic
# endif
#endif

/*
 * Existence of an AutoStatic symbol sets our flags for static linking.
 */

#ifdef AutoStatic
# if UseGcc
#  define StaticFlag -static
# else /* guess */
#   define StaticFlag -Bstatic
# endif
# ifndef CDebugFlags
#  define CDebugFlags -g StaticFlag
# endif
# ifndef CplusplusDebugFlags
#  define CplusplusDebugFlags -g StaticFlag
# endif
#endif /* Static */   

#ifndef CDebugFlags
# define CDebugFlags -g
#endif

#ifdef HPArchitecture
# define ExtraLoadOptions -Xlinker +vnocompatwarnings
#endif

#ifdef SGIArchitecture
# if !UseGcc
#  define CCOptions -32 -mips2
   /* 
    * Using IRIX X libraries produces warnings about multiple vendorShellClass
    * symbols in Xaw and Xt.  Tell the linker to suppress that warning.
    * Someday we may need to suppress warning 84, about libraries not being
    * used to resolve any symbols.
    */
#  define ExtraLoadOptions -Wl,-woff,85
# else
   /*
    * There might need to be linker options on the gcc command line if
    * gcc is using the 6.x ld instead of /usr/lib/old_ld, since the 6.x ld
    * will report the same warnings as are suppressed above for IRIX cc.
    */
# endif
#endif


