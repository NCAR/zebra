MFVERSION="$Id: Imakefile,v 1.1 2000-03-09 17:23:16 burghart Exp $"

LIBS = $(DFALIBS) $(ZLIBS)
INCLUDES = -I/usr/local/include/python1.5

MODULESRCS = zebra.c ds.c msg.c
MODULEOBJS = zebra.o ds.o msg.o

CCSRCS = $(MODULESRCS)
CCOBJS = $(MODULEOBJS)

SRCS = $(CCSRCS)
OBJS = $(CCOBJS)

HEADERS = 

DISTFILES = $(SRCS) ($HEADERS) Imakefile 

all:: zebra.so

zebra.so: $(MODULEOBJS)
	$(CXX) -shared -o $@ $^ $(LIBS)

InstallLibFile (zebra.so,python,..)

CcDependTarget($(CCSRCS))

DependTarget()
LintTarget()

DistfilesTarget($(DISTFILES))

