!
! Locations with active areas.  Middle menu is set to call PutScalar,
! but that is tweakable.
!
global
	pd-name:	p_active_loc
p_active_loc
	platform:	SOMETHING
	representation:	overlay
	field:		location
	color:		white
	label-size:	10
	icon:		radar-loc
	icon-left-menu:		minimal-cap-left-menu
	icon-right-menu:	location-options
