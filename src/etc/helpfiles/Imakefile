/*
 * Imakefile for the ETC directory.
 */

HELPFILES = \
	xhelp.hlp zeb.hlp \
	fest_stations.hlp fest_soundings.hlp fest_codes.hlp fest_profilers.hlp

DISTFILES = Imakefile $(HELPFILES)

all::

/*
 * Install the old xhelp files.
 */
InstallLibFile ($(HELPFILES),help,.)

/*
 * Install all the new junk.  I don't feel much like typing them all in.
 */
install::
	MakeDir ($(LIBDIR)/help)
	for file in *.gif *.html ; do \
		$(INSTALL) -m 444 $${file} $(LIBDIR)/help ; \
	done

DistfilesTarget ($(DISTFILES))
