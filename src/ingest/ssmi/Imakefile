MFVERSION="$Id: Imakefile,v 1.3 1993-10-22 22:47:26 granger Exp $"

PROOF=/net/CenterLine/bin/proof

LIBMP = /local/src/prog-tools/mprof/libc_mp.a

SYS_LIBRARIES = $(MATHLIB) $(TERMCAPLIB) /* $(LIBMP) */
LOCAL_LIBS = $(LIBZEBDS) $(LIBZEB) $(LIBRDSS) \
		$(LIBNETCDF) $(XLIBS) $(FLIBS)
DEPLIBS = $(LIBZEBDS) $(LIBZEB)

LINTOPTS = -nuvxz

FORTDEBUGFLAGS = /* none */
FORTOPTIONS = -O

FSRCS = decode.f
TSRCS = dumpSSMI.c
SRCS = ssmi_ingest.c scan.c decode_ssmi.c

OBJS = decode.o dumpSSMI.o
IOBJS = ssmi_ingest.o decode.o decode_ssmi.o scan.o

DISTFILES = Imakefile $(SRCS) $(FSRCS)

NormalProgramTarget(ssmi_ingest, $(IOBJS), $(DEPLIBS), $(LOCAL_LIBS),/**/)

ssmi_ingest.tc:  $(IOBJS) $(DEPLIBS)
	$(RM) $@
	$(PROOF) $(CC) -static -o $@ $(IOBJS) \
		$(LDOPTIONS) $(LOCAL_LIBS) $(LDLIBS)   $(EXTRA_LOAD_FLAGS)

clean::
	$(RM) ssmi_ingest.tc

TestProgramTarget(dumpSSMI,dumpSSMI.o,/*deplibs*/,/*libs*/,/**/)

DistfilesTarget($(DISTFILES))

DependTarget()

LintTarget()

LIBGCC = /usr/local/lib/gcc-lib/sparc-sun-sunos4.1/2.4.5/libgcc.a

