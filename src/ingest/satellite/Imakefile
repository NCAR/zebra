MFVERSION="$Id: Imakefile,v 1.5 1993-07-01 20:16:19 granger Exp $"

LIBS = $(LIBZEBDS) $(LIBZEB) $(LIBRDSS) $(LIBNETCDF) $(XLIBS) \
	$(LIBMCIDAS) $(FLIBS)

DEPLIBS = $(LIBZEB) $(LIBZEBDS) $(LIBMCIDAS)

/*!
 *! Note that these programs require the MCIDAS objects in ingest/mcidas
 *! to be installed in the Zeb library
 *!
 */

SRCS = SatIngest.c GMSIngest.c area_dump.c areadump.c

OBJS = nvxgoes.o

XCOMM nvxgoes.f contains the definitions of the nvxeas,nvxini,nvxopt, and
XCOMM    nvxsae routines required by the satellite ingestors

DISTFILES = Imakefile $(SRCS) SatIngest.state big.sat \
	    cape_sat dir_ingest goes.ini gms.ini \
	    keywords.h sat.init satheader nvxgoes.f \
	    hackgms.c harp.ini README mcidas_read.c

/*---------------------------------------------------------------------*/
#if BuildIngest && BuildSatelliteIngest

NormalProgramTarget(SatIngest,SatIngest.o $(OBJS),
		    $(DEPLIBS),$(LIBS),$(SYSLIBS))

NormalProgramTarget(GMSIngest,GMSIngest.o $(OBJS),
		    $(DEPLIBS),$(LIBS),$(SYSLIBS))

TestProgramTarget(testSatIngest,testSatIngest.o $(OBJS),
		    $(DEPLIBS),$(LIBS),$(SYSLIBS))

TestProgramTarget(area_dump,area_dump.o,/**/,/**/,/**/)

TestProgramTarget(areadump,areadump.o,/**/,/**/,/**/)

UICppLoadFileTarget(SatIngest.lf,SatIngest.state,keywords.h)

LintTarget()
DependTarget()
/*---------------------------------------------------------------------*/
#else
OmitBuildRules(MCIDAS GOES/GMS ingest)
#endif

DistfilesTarget($(DISTFILES))

