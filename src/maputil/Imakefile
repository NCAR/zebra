MFVERSION="$Id: Imakefile,v 1.1 1996-12-30 17:26:45 burghart Exp $"

#define IHaveSubdirs
#define PassCDebugFlags 'CDEBUGFLAGS=$(CDEBUGFLAGS)'

LIBS = $(ZLIBS)
SYSLIBS = $(LIBMATH) $(LIBTERMCAP) $(LIBREGEXP)
FIPSLIB = fips123/libfips123.a

SUBDIRS = fips123

SRCS = cbd2zebra.c DEMextract.c dlg2zebra.c drawmap.c extractmap.c \
	mapfilter.c sdtsdump.c tablet.c 

DISTFILES = Imakefile $(SRCS) README DEM_records.txt dlg_sdts.ps.gz

/*
 * Make the FIPS123 library now, since we'll need it for later targets
 */
MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
InstallLibSubdirs($(SUBDIRS))
DistfilesSubdirs($(SUBDIRS))

CompleteProgramTarget(cbd2zebra,cbd2zebra.o,,,)
CompleteProgramTarget(DEMextract,DEMextract.o,,$(LIBNETCDF),$(SYSLIBS))
CompleteProgramTarget(dlg2zebra,dlg2zebra.o,$(FIPSLIB),$(FIPSLIB),)
# ifdef SunArchitecture
	CompleteProgramTarget(drawmap,drawmap.o tablet.o,$(DEPLIBS),
			      $(LIBS) $(XLIBS),$(SYSLIBS))
# endif
CompleteProgramTarget(extractmap,extractmap.o,$(DEPLIBS),$(LIBS),$(SYSLIBS))
CompleteProgramTarget(mapfilter,mapfilter.o,,,)
CompleteProgramTarget(sdtsdump,sdtsdump.o,$(FIPSLIB),$(FIPSLIB),)

DependTarget()
LintTarget()

DistfilesTarget($(DISTFILES))

