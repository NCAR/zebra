/*
 * Imakefile for the zstart script
 */

DISTFILES = Imakefile zstart.sh
DISTSUBDIRS = $(SUBDIRS)

all:: zstart		/* don't want first target to be install */

zstart: zstart.script
	$(RM) zstart
	cat zstart.script > zstart
	chmod +x zstart

zstart.script:	zstart.sh
	sed -e s,##TOPDIRHERE,BaseDir, <zstart.sh >zstart.script

clean::
	rm -f zstart.script

InstallScript (zstart, $(BINDIR))

DistfilesTarget($(DISTFILES))

