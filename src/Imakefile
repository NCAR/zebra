MFVERSION="$Id: Imakefile,v 1.19 1997-01-06 19:54:26 burghart Exp $"

#define IHaveSubdirs
#define PassCDebugFlags 'CDEBUGFLAGS=$(CDEBUGFLAGS)'

ETC = etc
DSLIB = ds
ZEBLIB = lib
LIBS = $(ZEBLIB) $(DSLIB)
GP = gp

#if BuildIngest && DistributeIngest
INGEST = ingest
#endif
#if BuildOptimizer && DistributeOptimizer
OPTIMIZER_DIR = Optimizer
#endif
#if BuildDataUtilities && DistributeDataUtil
DATAUTIL = datautil
#endif
#if BuildRealtimeDataStoreTools && DistributeRealtimeDataStoreTools
REALTIME = realtime
#endif   
#if BuildDataManager && DistributeDataManager && HasCplusplus
DSMANAGE = dsmanage
#endif
#if BuildXHelp && DistributeXHelp
XHELP = xhelp
#endif
#if BuildMapUtilities && DistributeMapUtil
MAPUTIL = maputil
#endif


/*
 * "lib" and "ds" must come first, in that order.  Thereafter it's
 * alphabetical but really doesn't matter.
 */
SUBDIRS = $(LIBS) $(DATAUTIL) dm dsdelete dsdump dsnotice dsprint \
	dsdwidget $(DSMANAGE) dsrescan $(ETC) EventLogger fccclock gettime \
	pdmon pdcheck $(GP) $(INGEST) $(MAPUTIL) msg msg_ping mstatus mtap \
	$(OPTIMIZER_DIR) prt_Notify $(REALTIME) settime Sound timer \
	tweakcolor $(XHELP) xmgrpipe zstop zmon zquery zrun zstart

DSUTILS = $(LIBS) dsdelete dsdump dsnotice dsprint dsdwidget $(DSMANAGE) \
	dsrescan $(REALTIME)

DSCLIENTS = $(DSUTILS) $(GP) $(INGEST) $(OPTIMIZER_DIR) xmgrpipe \
	dm $(DATAUTIL)

MSGUTILS = $(ZEBLIB) msg msg_ping mstatus mtap zstop zmon zquery zrun

XCOMM Include everything in the distfiles target.  They
XCOMM don't all have to be compiled, so no big deal sending along a little
XCOMM extra source.  Distribute prt_Notify even though it will never get
XCOMM built, so that we don't forget it somewhere down the road.

#if DistributeIngest
DISTINGEST = ingest
#endif
#if DistributeOptimizer
DISTOPTIMIZER = Optimizer
#endif
#if DistributeDataUtil
DISTDATAUTIL = datautil
#endif
#if DistributeRealtimeDataStoreTools
DISTREALTIME = realtime
#endif
#if DistributeDataManager
DISTDSMANAGE = dsmanage
#endif
#if DistributeXHelp
DISTXHELP = xhelp
#endif
#if DistributeMapUtil
DISTMAPUTIL = maputil
#endif

DISTFILES = Imakefile
DISTSUBDIRS = lib ds $(DISTDATAUTIL) dm dsdelete dsdump dsnotice dsprint \
	dsdwidget $(DISTDSMANAGE) dsrescan etc EventLogger fccclock \
	gettime pdmon pdcheck $(GP) $(DISTINGEST) $(DISTMAPUTIL) msg msg_ping \
	mstatus mtap $(DISTOPTIMIZER) prt_Notify $(DISTREALTIME) settime \
	Sound timer tweakcolor $(DISTXHELP) xmgrpipe \
	zstop zmon zquery zrun zstart

TESTSUBDIRS = $(LIBS) pdcheck

MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
InstallLibSubdirs($(SUBDIRS))
DistfilesTarget($(DISTFILES))
DistfilesSubdirs($(DISTSUBDIRS))
TestSubdirs($(TESTSUBDIRS))

TARGET = all

programs:
	$(MAKE) $(MFLAGS) ETC= LIBS= GP='$(GP)' $(TARGET)

libraries:
	$(MAKE) $(MFLAGS) SUBDIRS='$(LIBS)' $(TARGET)

dsclients:
	$(MAKE) $(MFLAGS) SUBDIRS='$(DSCLIENTS)' GP='$(GP)' LIBS='$(LIBS)' \
		$(TARGET)

dsutils:
	$(MAKE) $(MFLAGS) SUBDIRS='$(DSUTILS)' LIBS='$(LIBS)' $(TARGET)

msgutils:
	$(MAKE) $(MFLAGS) SUBDIRS='$(MSGUTILS)' ZEBLIB='$(ZEBLIB)' $(TARGET)

#if !BuildIngest
OmitBuildRules(ingest utilities)
#endif

#if !BuildOptimizer
OmitBuildRules(Optimizer)
#endif

#if !BuildDataUtilities
OmitBuildRules(data utilities)
#endif

#if !BuildRealtimeDataStoreTools
OmitBuildRules(real-time DataStore tools)
#endif   

#if !BuildDataManager
OmitBuildRules(dsmanage)
#else
#if !HasCplusplus
OmitBuildRules(dsmanage -- no C++ compiler)
#endif
#endif /* BuildDataManager */

#if !BuildXHelp
OmitBuildRules(xhelp)
#endif
