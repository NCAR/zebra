MFVERSION="$Id: Imakefile,v 1.1 1993-05-26 19:22:52 corbet Exp $"

#define IHaveSubdirs
#define PassCDebugFlags 'CDEBUGFLAGS=$(CDEBUGFLAGS)'

/*
 * prt_Notify does not get built for now -- it depends on deep hooks
 * into the data store that don't exist for the moment.
 *
 * Some subdirs are conditional.
 */
# if BuildRealtimeDataStoreTools
	REALTIME=realtime
# endif

# if BuildOptimizer
	OPTIMIZER = Optimizer
# endif

# if BuildIngest
	INGEST = ingest
# endif

#if BuildDataUtilities
       DATAUTIL = datautil
#endif

/*
 * "lib" and "ds" must come first, in that order.  Thereafter it's
 * alphabetical but really doesn't matter.
 */
SUBDIRS = lib ds \
	$(DATAUTIL) dm dsdelete dsdump dsdwidget dsmanage dsrescan \
	etc EventLogger fccclock gettime gp $(INGEST) \
	msg msg_ping mstatus mtap $(OPTIMIZER) pdmon $(REALTIME) \
	settime Sound timer tweakcolor xhelp zebstop zmon zquery zrun


DISTFILES = Imakefile
DISTSUBDIRS = dsdelete dsdump dsdwidget dsmanage dsrescan \
	msg msg_ping mstatus mtap lib $(REALTIME) timer zebstop zquery zrun

MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
InstallLibSubdirs($(SUBDIRS))
DistfilesTarget($(DISTFILES))
DistfilesSubdirs($(DISTSUBDIRS))

