LIBS=$(LIBZEB) $(LIBRDSS) $(LIBNETCDF) $(XLIBS)

OBJS = Optimizer.o Bitmaps.o Boundary.o CommandWidget.o GenScan.o \
	LeftRightButtons.o MainWidget.o RadarWidget.o ScanOptions.o \
	SendWidget.o

SRCS = $(OBJS:.o=.c)

HEADERS = bitmaps.h globals.h keywords.h prototypes.h radar.h

OTHERS = cape cinde config_format.doc Optimizer.ad

DISTFILES = Imakefile $(SRCS) $(HEADERS) Optimizer.state $(OTHERS)

TestProgramTarget(test,$(OBJS),$(DEPLIBS),$(LIBS),$(SYSLIBS))

NormalProgramTarget(Optimizer, $(OBJS), $(DEPLIBS),
		    $(LIBS), $(SYSLIBS))

InstallAppDefaults(Optimizer)

/*
 * Note how normal make targets can be added as shortcuts, as here,
 * since the UICppLoadFileTarget() macro will create the dependencies
 * and rules for the Optimizer.lf target, and lf will just point to
 * that target
 */
lf:	Optimizer.lf

/*
 * This target generates Optimizer.lf from Optimizer.state, much
 * like UILoadFileTarget(), except that Optimizer.state is first
 * processed with cpp.  The third parameter is the dependencies
 * of the UI state file
 */
UICppLoadFileTarget(Optimizer.lf,Optimizer.state,keywords.h)

DependTarget()

LintTarget()

DistfilesTarget($(DISTFILES))

