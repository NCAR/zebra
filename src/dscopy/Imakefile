MFVERSION="$Id: Imakefile,v 1.13 1994-10-10 16:44:11 corbet Exp $"

#define IHaveSubdirs
#define PassCDebugFlags 'CDEBUGFLAGS=$(CDEBUGFLAGS)'

SUBDIRS = profiler surface

LIBS=$(LIBZEB) $(LIBNETCDF) $(LIBRDSS)

SRCS  = convmud.c dscopy.c gprotocdf.c mudtocdf.c tao_conv.c \
	mudutil.c cdf_interpolate.c dump-fgp.c readgp.c fix_cdf.c \
	netcdf_fixlon.c

FSRCS = mudras.F

HEADERS = mudutil.h fixed-gp.h

OTHERS = mud.id gp.hdr convmud.doc uwtocdf iss.problem netcdf_fixlon

DISTFILES = Imakefile $(SRCS) $(FSRCS) $(HEADERS) dscopy.state

# if defined(HPArchitecture) || defined(SGIArchitecture) 
.SUFFIXES:	.F

.F.o:
	$(FC) $(FFLAGS) -c $<
# endif


NormalProgramTargetNoInstall(dscopy, dscopy.o, $(DEPLIBS),
			     $(LIBZEBDS) $(LIBS) $(XLIBS), $(SYSLIBS))
InstallProgramWithFlags(dscopy,$(BINDIR),-s)

NormalProgramTargetNoInstall(convmud,convmud.o mudutil.o, $(DEPLIBS),
			     $(LIBS), $(SYSLIBS))
InstallProgramWithFlags(convmud,$(BINDIR),-s)

NormalProgramTarget(cdf_interpolate,cdf_interpolate.o,$(DEPLIBS),$(LIBS),
		$(SYSLIBS))

NormalProgramTargetNoInstall(tao_conv, tao_conv.o, $(DEPLIBS),
			     $(LIBZEBDS) $(LIBS) $(XLIBS), $(SYSLIBS))
InstallProgramWithFlags(tao_conv,$(BINDIR),-s)


/*
 * Links with RDSS libraries twice until calls to ui removed from util
 */
NormalProgramTarget(gprotocdf,gprotocdf.o,$(DEPLIBS),$(LIBS) $(LIBRDSS),$(SYSLIBS))

/* NormalProgramTarget(fix-gp,fix-gp.o,$(DEPLIBS),$(LIBS) $(LIBRDSS),$(SYSLIBS)) */

NormalProgramTarget(mudtocdf,mudtocdf.o mudras.o,$(DEPLIBS),
		    $(LIBS) $(FLIBS), $(SYSLIBS))

NormalProgramTarget(netcdf_fixlon,netcdf_fixlon.o,,$(LIBNETCDF),)

UISimpleLoadFileTarget(dscopy.lf,dscopy.state)

saber_mc:
	#setopt ansi
	#load $(CFLAGS) mudtocdf.c mudras.o -Bstatic $(FLIBS) $(LIBS)

saber_cm:
	#setopt ansi
	#load $(CFLAGS) convmud.c mudutil.c -Bstatic $(LIBS)

saber_gp:
	#setopt ansi
	#load $(CFLAGS) gprotocdf.c -Bstatic $(LIBS)

saber_dc:
	#setopt ansi
	#load $(CFLAGS) dscopy.c -Bstatic $(LIBS)

DependTarget()
LintTarget()

MakeSubdirs($(SUBDIRS))
DependSubdirs($(SUBDIRS))
DistfilesTarget($(DISTFILES))
DistfilesSubdirs($(SUBDIRS))
